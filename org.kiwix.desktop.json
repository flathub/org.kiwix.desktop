{
    "app-id": "org.kiwix.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kiwix-desktop",
    "rename-icon": "kiwix-desktop",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/*.la",
        "/bin/curl",
        "/bin/copydatabase",
        "/bin/kiwix-compile-resources",
        "/bin/kiwix-manage",
        "/bin/kiwix-read",
        "/bin/kiwix-search",
        "/bin/quest",
        "/bin/simple*",
        "/bin/xapian-*",
        "/share/aclocal",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "pugixml",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "0f422dad86da0a2e56a37fb2a88376aae6e931f22cc8b956978460c9db06136b",
                    "url": "http://mirror.download.kiwix.org/dev/kiwix-build/pugixml-1.2.tar.gz",
                    "dest": "src"
                },
                {
                    "type": "patch",
                    "path": "patches/pugixml_meson.patch"
                }
            ]
        },
        {
            "name": "zstd",
            "buildsystem": "meson",
            "subdir": "build/meson",
            "config-opts": [
                "-Dbin_programs=false",
                "-Dbin_contrib=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "f7de13462f7a82c29ab865820149e778cbfe01087b3a55b5332707abf9db4a6e",
                    "url": "https://github.com/facebook/zstd/archive/refs/tags/v1.5.2.tar.gz"
                }
            ]
        },
        {
            "name": "xapian-core",
            "config-opts": [
                "--disable-sse",
                "--disable-backend-chert",
                "--disable-backend-remote",
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "05884af00b06702ce486057d62a3bfbe6606cf965ada0f5ea570b328a2fa1ea8",
                    "url": "http://mirror.download.kiwix.org/dev/kiwix-build/xapian-core-1.4.22.tar.xz"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_win32.patch"
                }
            ]
        },
        {
            "name": "libzim",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload",
                "-Dtest_data_dir=none"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/openzim/libzim.git",
                    "tag": "8.2.1",
                    "commit": "ef2378c9aa875eeae96c2e4d220e4ba433296d51"
                }
            ]
        },
        {
            "name": "libmicrohttpd",
            "config-opts": [
                "--disable-https",
                "--without-libgcrypt",
                "--without-libcurl",
                "--disable-doc",
                "--disable-examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "f0b1547b5a42a6c0f724e8e1c1cb5ce9c4c35fb495e7d780b9930d35011ceb4c",
                    "url": "https://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-0.9.76.tar.gz"
                }
            ]
        },
        {
            "name": "mustache",
            "buildsystem": "simple",
            "build-commands": [
                "cp mustache.hpp /app/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "acd66359feb4318b421f9574cfc5a511133a77d916d0b13c7caa3783c0bfe167",
                    "url": "https://github.com/kainjow/Mustache/archive/v4.1.tar.gz"
                }
            ]
        },
        {
            "name": "libkiwix",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/libkiwix.git",
                    "tag": "12.1.1",
                    "commit": "45b3cfca164d0c0b39054e6d55484b59841ce52f"
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--disable-libaria2",
                "--disable-websocket",
                "--without-sqlite3"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "58d1e7608c12404f0229a3d9a4953d0d00c18040504498b483305bcb3de907a5",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.36.0/aria2-1.36.0.tar.xz"
                }
            ]
        },
        {
            "name": "kiwix-desktop",
            "buildsystem": "qmake",
            "build-options": {
                "env": [
                    "QMAKEPATH=/app/lib"
                ]
            },
            "config-opts": [
                "QMAKE_INCDIR+=/app/include/QtWebEngine",
                "QMAKE_INCDIR+=/app/include/QtWebEngineCore",
                "QMAKE_INCDIR+=/app/include/QtWebEngineWidgets"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-desktop.git",
                    "tag": "2.3.1",
                    "commit": "840b731a59cc9d230a2d9b4d7729c569c03c8f9e"
                }
            ]
        }
    ]
}