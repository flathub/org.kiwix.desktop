{
    "app-id": "org.kiwix.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "kiwix-desktop",
    "rename-icon": "kiwix-desktop",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/*.la",
        "/bin/curl",
        "/bin/copydatabase",
        "/bin/kiwix-compile-resources",
        "/bin/kiwix-manage",
        "/bin/kiwix-read",
        "/bin/kiwix-search",
        "/bin/quest",
        "/bin/simple*",
        "/bin/xapian-*",
        "/share/aclocal",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "pugixml",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "0f422dad86da0a2e56a37fb2a88376aae6e931f22cc8b956978460c9db06136b",
                    "url": "http://download.kiwix.org/dev/pugixml-1.2.tar.gz",
                    "dest": "src"
                },
                {
                    "type": "patch",
                    "path": "patches/pugixml_meson.patch"
                }
            ]
        },
        {
            "name": "zstd",
            "buildsystem": "meson",
            "subdir": "build/meson",
            "config-opts": [
                "-Dbin_programs=false",
                "-Dbin_contrib=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "59ef70ebb757ffe74a7b3fe9c305e2ba3350021a918d168a046c6300aeea9315",
                    "url": "https://github.com/facebook/zstd/releases/download/v1.4.4/zstd-1.4.4.tar.gz"
                },
                {
                    "type": "patch",
                    "path": "patches/zstd_meson.patch"
                }
            ]
        },
        {
            "name": "xapian-core",
            "config-opts": [
                "--disable-sse",
                "--disable-backend-chert",
                "--disable-backend-remote",
                "--disable-backend-inmemory",
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "975a7ac018c9d34a15cc94a3ecc883204403469f748907e5c4c64d0aec2e4949",
                    "url": "http://download.kiwix.org/dev/xapian-core-1.4.14.tar.xz"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_sys_types.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_fix_include_errno.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_remote.patch"
                }
            ]
        },
        {
            "name": "libzim",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/openzim/libzim.git",
                    "tag": "6.1.7",
                    "commit": "189176e2ce1b503eca52dfba2ff55687e4cf99f6"
                }
            ]
        },
        {
            "name": "libmicrohttpd",
            "config-opts": [
                "--disable-https",
                "--without-libgcrypt",
                "--without-libcurl",
                "--disable-doc",
                "--disable-examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "37c36f1be177f0e37ef181a645cd3baac1000bd322a01c2eff70f3cc8c91749c",
                    "url": "https://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-0.9.63.tar.gz"
                }
            ]
        },
        {
            "name": "mustache",
            "buildsystem": "simple",
            "build-commands": [
                "cp mustache.hpp /app/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "acd66359feb4318b421f9574cfc5a511133a77d916d0b13c7caa3783c0bfe167",
                    "url": "https://github.com/kainjow/Mustache/archive/v4.1.tar.gz"
                }
            ]
        },
        {
            "name": "kiwix-lib",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-lib.git",
                    "tag": "9.3.0",
                    "commit": "f997fdb232adaf5622d8dab3ee21e07bf60f72cc"
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--disable-libaria2",
                "--disable-websocket",
                "--without-sqlite3"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "3a44a802631606e138a9e172a3e9f5bcbaac43ce2895c1d8e2b46f30487e77a3",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.34.0/aria2-1.34.0.tar.xz"
                },
                {
                    "type": "patch",
                    "path": "patches/libaria2_android.patch"
                }
            ]
        },
        {
            "name": "kiwix-tools",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-tools.git",
                    "tag": "3.1.2",
                    "commit": "fdec897bc76e43bad6f27166fb0e3fe49170d4d3"
                }
            ]
        },
        {
            "name": "kiwix-desktop",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-desktop.git",
                    "tag": "2.0.3",
                    "commit": "0e08e18b3e81cf6fc82652a68ff6568b77bd4715"
                }
            ]
        }
    ]
}