{
    "app-id": "org.kiwix.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "kiwix-desktop",
    "rename-icon": "kiwix-desktop",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/*.la",
        "/bin/curl",
        "/bin/copydatabase",
        "/bin/kiwix-compile-resources",
        "/bin/kiwix-manage",
        "/bin/kiwix-read",
        "/bin/kiwix-search",
        "/bin/quest",
        "/bin/simple*",
        "/bin/xapian-*",
        "/share/aclocal",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "pugixml",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "0f422dad86da0a2e56a37fb2a88376aae6e931f22cc8b956978460c9db06136b",
                    "url": "http://download.kiwix.org/dev/pugixml-1.2.tar.gz",
                    "dest": "src"
                },
                {
                    "type": "patch",
                    "path": "patches/pugixml_meson.patch"
                }
            ]
        },
        {
            "name": "xapian-core",
            "config-opts": [
                "--disable-sse",
                "--disable-backend-chert",
                "--disable-backend-remote",
                "--disable-backend-inmemory",
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "68669327e08544ac88fe3473745dbcae4e8e98d5060b436c4d566f1f78709bb8",
                    "url": "http://download.kiwix.org/dev/xapian-core-1.4.10.tar.xz"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_sys_types.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/xapian_fix_include_errno.patch"
                }
            ]
        },
        {
            "name": "libzim",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/openzim/libzim.git",
                    "tag": "6.0.2",
                    "commit": "ce63cb59badab914f6044bb5d76796fbb99a3f53"
                }
            ]
        },
        {
            "name": "libmicrohttpd",
            "config-opts": [
                "--disable-https",
                "--without-libgcrypt",
                "--without-libcurl",
                "--disable-doc",
                "--disable-examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "c5716e2a2899abc9e16c8fa7a1a58da88f81aca96a0b7e68a5d4d89e21610b61",
                    "url": "http://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-0.9.68.tar.gz"
                }
            ]
        },
        {
            "name": "mustache",
            "buildsystem": "simple",
            "build-commands": [
                "cp mustache.hpp /app/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "17129681ee207404409d71bdc649f08d47029e3dea0ef68e5cd47868de1be23c",
                    "url": "https://github.com/kainjow/Mustache/archive/v4.0.tar.gz"
                },
                {
                    "type": "patch",
                    "path": "patches/mustache_virtual_destructor.patch"
                }
            ]
        },
        {
            "name": "kiwix-lib",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-lib.git",
                    "tag": "8.2.0",
                    "commit": "3b7c8051830efeef8efce5abf73c514d58b22ecd"
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--disable-libaria2",
                "--disable-websocket",
                "--without-sqlite3"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "1e2b7fd08d6af228856e51c07173cfcf987528f1ac97e04c5af4a47642617dfd",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.35.0/aria2-1.35.0.tar.xz"
                },
                {
                    "type": "patch",
                    "path": "patches/libaria2_android.patch"
                }
            ]
        },
        {
            "name": "kiwix-tools",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-tools.git",
                    "tag": "3.0.1",
                    "commit": "98c810eb2ad7a9aa471fc47e64dab9584268fb6e"
                }
            ]
        },
        {
            "name": "kiwix-desktop",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-desktop.git",
                    "tag": "2.0-rc3",
		    "commit": "b67577ac9a422f0602366f52e40ff2520d5bf85c"
                }
            ]
        }
    ]
}
