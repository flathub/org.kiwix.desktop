{
    "app-id": "org.kiwix.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kiwix-desktop",
    "rename-icon": "kiwix-desktop",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/*.la",
        "/bin/curl",
        "/bin/copydatabase",
        "/bin/kiwix-compile-resources",
        "/bin/kiwix-manage",
        "/bin/kiwix-read",
        "/bin/kiwix-search",
        "/bin/quest",
        "/bin/simple*",
        "/bin/xapian-*",
        "/share/aclocal",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "pugixml",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "0f422dad86da0a2e56a37fb2a88376aae6e931f22cc8b956978460c9db06136b",
                    "url": "http://mirror.download.kiwix.org/dev/pugixml-1.2.tar.gz",
                    "dest": "src"
                },
                {
                    "type": "patch",
                    "path": "patches/pugixml_meson.patch"
                }
            ]
        },
        {
            "name": "zstd",
            "buildsystem": "meson",
            "subdir": "build/meson",
            "config-opts": [
                "-Dbin_programs=false",
                "-Dbin_contrib=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "e28b2f2ed5710ea0d3a1ecac3f6a947a016b972b9dd30242369010e5f53d7002",
                    "url": "https://github.com/facebook/zstd/releases/download/v1.5.1/zstd-1.5.1.tar.gz"
                }
            ]
        },
        {
            "name": "xapian-core",
            "config-opts": [
                "--disable-sse",
                "--disable-backend-chert",
                "--disable-backend-remote",
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "196ddbb4ad10450100f0991a599e4ed944cbad92e4a6fe813be6dce160244b77",
                    "url": "http://mirror.download.kiwix.org/dev/xapian-core-1.4.18.tar.xz"
                }
            ]
        },
        {
            "name": "libzim",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload",
                "-Dtest_data_dir=none"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/openzim/libzim.git",
                    "tag": "7.2.0",
                    "commit": "3e7831426efb86d541b3962d20dfa92af57f2650"
                }
            ]
        },
        {
            "name": "libmicrohttpd",
            "config-opts": [
                "--disable-https",
                "--without-libgcrypt",
                "--without-libcurl",
                "--disable-doc",
                "--disable-examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "0ae825f8e0d7f41201fd44a0df1cf454c1cb0bc50fe9d59c26552260264c2ff8",
                    "url": "https://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-0.9.72.tar.gz"
                }
            ]
        },
        {
            "name": "mustache",
            "buildsystem": "simple",
            "build-commands": [
                "cp mustache.hpp /app/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "acd66359feb4318b421f9574cfc5a511133a77d916d0b13c7caa3783c0bfe167",
                    "url": "https://github.com/kainjow/Mustache/archive/v4.1.tar.gz"
                }
            ]
        },
        {
            "name": "libkiwix",
            "buildsystem": "meson",
            "config-opts": [
                "--wrap-mode=nodownload"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/libkiwix.git",
                    "tag": "10.1.0",
                    "commit": "941c3b5df3f99f1160800f5a415e516b0f7639ce"
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--disable-libaria2",
                "--disable-websocket",
                "--without-sqlite3"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "58d1e7608c12404f0229a3d9a4953d0d00c18040504498b483305bcb3de907a5",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.36.0/aria2-1.36.0.tar.xz"
                }
            ]
        },
        {
            "name": "kiwix-desktop",
            "buildsystem": "qmake",
            "build-options": {
                "env": [
                    "QMAKEPATH=/app/lib"
                ]
            },
            "config-opts": [
                "QMAKE_INCDIR+=/app/include/QtWebEngine",
                "QMAKE_INCDIR+=/app/include/QtWebEngineCore",
                "QMAKE_INCDIR+=/app/include/QtWebEngineWidgets"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kiwix/kiwix-desktop.git",
                    "tag": "2.2.1",
                    "commit": "fe52c11329c84c64ec68fc76a4345db3b3632e94"
                }
            ]
        }
    ]
}